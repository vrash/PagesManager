<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FBPAGEBG"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vrashabh.fbpagesmanager.PhotoPostCreationActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Handcraft your photo post"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/camimage"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/camimage"
        android:background="@color/FBPAGEBGBT"
        android:onClick="PostPhotoToPage"
        android:text="Post on Page"
        android:textColor="@color/white" />

    <Switch
        android:id="@+id/pubSwitchCam"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@color/FBPAGEBGBT"
        android:checked="false"
        android:text="Publish post?"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/camimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/pubSwitchCam"
        android:layout_alignStart="@+id/pubSwitchCam"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="43dp"
        android:background="@drawable/listborder" />

    <EditText
        android:id="@+id/cammsg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Message"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/cambutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/camimage"
        android:layout_marginTop="56dp"
        android:background="@color/FBPAGEBGBT"
        android:onClick="takePhoto"
        android:text="Take a picture"
        android:textColor="@color/white" />
</RelativeLayout>

