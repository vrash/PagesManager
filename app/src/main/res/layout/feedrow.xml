<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feedrelative"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/feedborder"
    android:orientation="vertical">

    <TextView
        android:id="@+id/feedname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="THIS IS A LARGE STATUS PLACEHOLDER status message"
        android:textColor="@color/FBPAGEBG"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/feedtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feedname"
        android:layout_alignStart="@+id/feedname"
        android:layout_below="@+id/feedImage"
        android:layout_gravity="center"
        android:text="thisstuffcanalsogetquitebig"
        android:textColor="@color/FBPAGEBG" />

    <ImageView
        android:id="@+id/feedImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/creationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/FBPAGEBG" />


</RelativeLayout>